<Window x:Class="CourseProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject"
        mc:Ignorable="d"
        Title="Electronic shop of food" Height="200" Width="450" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label Content="Hello, dear Customer, in our shop of food: apples, fish, meet, bread." FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>
            <Label Content="Write the password to enter VIP shop:" HorizontalAlignment="Center" Margin="5"/>
            <PasswordBox x:Name="passwordBox" Width="300" Margin="10"/>
            <Button Content="Enter the shop" x:Name="button_enterShop" Click="button_enterShop_Click" Margin="10" Width="150"/>
        </StackPanel>
    </Grid>
</Window>